<section class="container">
<div class="d-flex  new-project align-items-center justify-content-end">
<div>
<p class="float-right">Number of Projects <span class="circle"> <%= ProjectName.length %> </span></p>
</div>

<div>
<button onclick="open_project_form()" id="newProject" class="btn btn-primary">
New Project
</button>

</div>
</div>
<table>
  <tr>
    <th>Project name</th>
    <th>Project notes</th>
    <th>Budget</th>
    <th> Status </th>
  </tr>

 <% for(var i = 0; i < ProjectName.length; i++){ %>
<tr>
 
  
  <td><%= ProjectName[i].ProjectName %> </td>
    <td><%= ProjectName[i].Project_Notes%> </td>
   <td><%= ProjectName[i].budget%> </td>
   <td><%= ProjectName[i].Status%> </td>
 </tr>
<% } %>
  
  
  
  
</table>


<div class="overLay_NewProject">


 <div id="box" class="col project-form-cont">
<span onclick="close_project_form()" id="closeForm" class="float-right d-block"> X </span>

                        <form id="form" action="/projects" method="post">
                            <div class="form-floating">
                                <input class="form-control" id="name" name="ProjectName" type="text"
                                    placeholder="name" autocomplete="off" />
                                <label class="control-label " for="name">
                                    Customer Name
                                </label>

                            </div>
                            <div class="form-floating">

                                <input class="form-control" id="Project_Notes" name="Project_Notes" type="text"
                                    placeholder="name" autocomplete="off"/>
                                <label class="control-label " for="Project_Notes">
                                    Customer Notes
                                </label>
                            </div>
                            <div class="form-floating">

                                <select class="select" id="Status" name="Status" form="form">
                                        
                                    <option value="">Select the Project Status</option>
                                    <option value="Open">Open</option>
                                    <option value="Pending">Pending</option>
                                    <option value="Follow-Up">Follow-Up</option>
                                    <option value="Closed">Closed</option>
                                    
                                  </select>
                               
                            </div>
                            <div class="form-floating">
                                

                                <input class="form-control" id="budget" name="budget" type="text"placeholder="name" autocomplete="off"/>
                                <label class="control-label " for="budget">
                                    Customer Budget
                                </label>
                                <button class="btn btn-primary " name="submit" type="submit"
                                     > submit </button>
                            </div>

                            </form>

                    </div>

</div>

</section>



